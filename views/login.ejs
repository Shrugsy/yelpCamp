<%- include('partials/header') %>



<h1 class="text-center">Log in</h1>

<div class="form">
    <form action="/login" method="POST">
        <div class="form-group row">
            <i class="fas fa-user my-auto h-100 col-1"></i><input class="form-control col-11" type="text" name="username" placeholder="username" required>
        </div>
        <div class="form-group row">
            <i class="fas fa-unlock-alt my-auto h-100 col-1"></i><input class="form-control col-11" type="password" name="password" placeholder="password" required>
        </div>
        <input type="hidden" name="referer" value="<%= referer %>">
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
    </form>
    <a class="btn btn-danger" href="/campgrounds">< Back to all Campgrounds</a></Back>
    
</div>




<%- include('partials/footer') %>
<%- include('../partials/header') %>

<div>
    <h1 class="text-center">Create a New Campground</h1>

    <div class="form">
        <form action="/campgrounds" method="post">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="name" name="name" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" placeholder="price / night" name="price" min="0.00" step="0.01" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="image url" name="image" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="description" placeholder="description" cols="30" rows="10" required></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        
        </form>
        <p>
            <a class="btn btn-secondary" href="/campgrounds">< Back to all Campgrounds</a>
        </p>
    </div>
</div>


<%- include('../partials/footer') %>
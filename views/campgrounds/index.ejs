<%- include('../partials/header') %>

<header class="jumbotron">
    <h1>Welcome to YelpCamp!</h1>
    <p>View our hand-picked campgrounds from all over the world</p>
    <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Campground</a>
    </p>
</header>

<div class="row">
    <div class="col-lg-12">
        <h3>User Submitted Campgrounds</h3>
    </div>
</div>

<div class="row" style="display:flex; flex-wrap: wrap;">
    <%  campgrounds.forEach((campground)=>{    %>
        <div class="col-md-3 col-sm-6">
            <div class="img-thumbnail text-center">
                <a href="/campgrounds/<%= campground._id %>">
                    <img class="img-fluid" src="<%= campground.image %>" alt="" data-toggle="tooltip" data-placement="top" title="<%=campground.description%>">
                </a>
                <div class="caption"><h4><%= campground.name %></h4></div>
                <p><a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a></p>
            </div>
            
        </div>
    <%  }) %>
</div>

<script>
$('.img-fluid').tooltip()
</script>





<%- include('../partials/footer') %>